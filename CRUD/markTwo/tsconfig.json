{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dest",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/*"],
      "@tests/*": ["__tests__/*"],
      "@config/*": ["src/config/*"],
      "@domain/*": ["src/domain/*"],
      "@middleware/*": ["src/middleware/*"],
      "@controller/*": ["src/middleware/controllers/*"],
      "@service/*": ["src/middleware/controllers/*"],
      "@DTO/*": ["src/middleware/controllers/*"],
      "@error/*": ["src/middleware/controllers/*"],
      "@helper/*": ["src/middleware/controllers/*"],
      "@validator/*": ["src/middleware/controllers/*"],
      "@route/*": ["src/routes/*"],
      "@util/*": ["src/utils/*"],
    }
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "build"]
}